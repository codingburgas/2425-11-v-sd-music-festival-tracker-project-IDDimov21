@page "/register"
@using FestivalApp_BLL.Services
@inject IUserService UserService
@inject NavigationManager Navigation

@code {
    private string name = "";
    private string email = "";
    private string password = "";
    private bool isArtist = false;
    private string errorMessage = "";

    private async Task HandleRegister()
    {
        Console.WriteLine("Register Button Clicked!");

        if (string.IsNullOrWhiteSpace(name) || string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "All fields are required.";
            return;
        }

        var success = await UserService.RegisterUser(name, email, password, isArtist);
    
        Console.WriteLine($"Registration Success: {success}");

        if (success)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Email already exists.";
        }
    }

}

<div class="auth-container">
    <div class="auth-box">
        <h2>Create Account</h2>
        <p>Fill in the details to register</p>

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Your name" @bind="name" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" placeholder="you@example.com" @bind="email" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="At least 8 characters" @bind="password" />
        </div>

        <div class="form-group">
            <input type="checkbox" @bind="isArtist" id="artistCheckbox" />
            <label for="artistCheckbox">I am an artist</label>
        </div>

        <p class="error-message">@errorMessage</p>

        <div class="switch-link">
            <a href="/">Already have an account? Login</a>
        </div>

        <button class="btn-login" @onclick="HandleRegister">Register</button>
    </div>
</div>