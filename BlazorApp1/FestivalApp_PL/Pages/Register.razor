@page "/register"

@code {
    private string name = "";
    private string email = "";
    private string password = "";
    private bool isArtist = false;

    private void HandleRegister()
    {
        Console.WriteLine("Registered successfully");
    }
}

<div class="auth-container">
    <div class="auth-box">
        <h2>Register</h2>

        <EditForm OnValidSubmit="HandleRegister">
            <div class="form-group">
                <label>Name</label>
                <InputText class="form-control" @bind="name" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <InputText class="form-control" @bind="email" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <InputText class="form-control" type="password" @bind="password" />
            </div>

            <div class="form-group">
                <InputCheckbox @bind="isArtist" />
                <label>Artist</label>
            </div>

            <div class="register-link">
                <a href="/">Already have an account? Login</a>
            </div>

            <button class="btn-login">Register</button>
        </EditForm>
    </div>
</div>
